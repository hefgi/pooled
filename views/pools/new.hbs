<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <form method="GET", action="/pools/newTx">
        <div class="form-group">
          <label for="minPerUser">Minimum ETH per contributor</label>
          <input type="text" class="form-control" name="minPerUser" value="1">
        </div>
        <div class="form-group">
          <label for="maxPerUser">Maximum ETH per contributor</label>
          <input type="text" class="form-control" name="maxPerUser" value="10">
        </div>
        <div class="form-group">
          <label for="maxPool">Total Pool allocation</label>
          <input type="text" class="form-control" name="maxPool" value="100">
        </div>
        <div class="form-group">
          <label for="autoClaim">Auto-Distribution</label>
          <select class="form-control" id="autoClaim">
            <option value="true">Activate</option>
            <option value="false">Desactivate</option>
          </select>
        </div>
        <div class="form-group">
          <label for="dest">Destination Address</label>
          <input type="text" class="form-control" name="dest" value="0x30565A380A89A74000517b827a8dAcdB8d948E65">
        </div>
        <div class="form-group">
          <label for="clostAt">Close pool at:</label>
          <input type="date" class="form-control" name="clostAt" value="13/06/2018">
        </div>
        <div class="form-group">
          <label for="ownerFeesPct">Pool percentage</label>
          <input type="text" class="form-control" name="ownerFeesPct" value="0 %">
          <small id="ownerFeesPct" class="form-text text-muted">0% goes to you - 0.5% goes to Pooled.io</small>
          <small id="ownerFeesPct" class="form-text text-muted">Total Fees : 0.50% </small>
        </div>
        <button type="submit" class="btn btn-primary">Create a pool with data {{tx}}</button>
      </form>
    </div>
  </div>
</div>
